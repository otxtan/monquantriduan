<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beta </title>
    <link rel="icon" type="image/png" href="~/Content/assets/img/logo/logo.png">

    <link rel="stylesheet" href="~/Content/assets/css/index.css">
    <link rel="stylesheet" href="~/Content/assets/css/header-footer.css">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Content/assets/fontawesome-free-6.1.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
</head>

<body>
    <!-------------------- Header ------------------>
    <header class="header">
        @{
            Html.RenderPartial("_PartialHeader");
        }
    </header>
    <!-------------------- Body ------------------>
    <div class="body">

        @RenderBody()
    </div>
    <!-------------------- footer ------------------>
    <!-- Footer -->
    <div class="footer">
        <footer class="text-center text-lg-start bg-white text-muted">
            @{
                Html.RenderPartial("_PartialFooter");
            }

        </footer>
    </div>

    <!-- Footer -->
    <script src="https://code.jquery.com/jquery-3.6.1.js"></script>
    <script>
        $(document).ready(function () {
            $('.tab_film_item').hide();
            $('.tab_film_item:first-child').fadeIn();
            $('.nav_tab li').click(function () {
                $('.nav_tab li').removeClass('active');
                $(this).addClass('active');
                let id_tab_film = $(this).children('a').attr('href');
                $('.tab_film_item').hide();
                $(id_tab_film).fadeIn();
                return false;
            });
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>



</html>