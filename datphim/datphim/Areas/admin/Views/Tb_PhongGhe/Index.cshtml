@model IEnumerable<datphim.Models.Tb_PhongGhe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/dashboard.cshtml";
}



<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-default" })
</p>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })


@using (Html.BeginForm("Index", "Tb_PhongGhe", FormMethod.Get))
{

    <div class="form-group">
        @Html.Label("Mã Phòng Chiếu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Ma_PhongChieu", null, htmlAttributes: new { @class = "form-control" })
            <input type="submit" value="Lọc" class="btn btn-default" />

        </div>
    </div>


}



<div class="row">
    <div class="col-md-12">
        <!--   Kitchen Sink -->
        <div class="card">
            <div class="card-action">
                Ghế
            </div>
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ma_PhongChieu)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TenGhe)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tb_LoaiGhe.TenLoai)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tb_Phong.LoaiPhong)
                                </th>
                                <th></th>
                            </tr>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ma_PhongChieu)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenGhe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tb_LoaiGhe.TenLoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tb_Phong.LoaiPhong)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.Ma_PhongGhe }, new { @class = "btn btn-info" }) |
                                        @Html.ActionLink("Thông tin", "Details", new { id = item.Ma_PhongGhe }, new { @class = "btn btn-primary" }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.Ma_PhongGhe }, new { @class = "btn btn-warning" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
